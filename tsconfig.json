{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2019"],
    "sourceMap": true,
    "outDir": "dist",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,

    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "domain/*": ["src/domain/*"],
      "data/*": ["src/data/*"],
      "infra/*": ["src/infra/*"],
      "main/*": ["src/main/*"]
    },
    "types": ["node"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "./node_modules"],
  "ts-node": {
    "files": true
  }
}
